{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div>
            <a href="{{ path('show_by_program', {'slug':program.slug}) }}"><h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2></a>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    {{ form_start(formSearch) }}
        {{ form_row(formSearch.searchField) }}
        <button type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(formSearch) }}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}