{% extends 'base.html.twig' %}

{% block title %}{{ programs[0].category.name }} Programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la categorie {{ programs[0].category.name }} </h1>
    {% for program in programs %}
        <div class="media">
            <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
            <div class="media-body">
                <h1 class="mt-0">{{ program.id }}. {{ program.title }}</h1>
                <p>{{ program.summary }}</p>
            </div>
        </div>
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
