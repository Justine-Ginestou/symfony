{% extends 'base.html.twig' %}

{% block title %}Categorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>Liste des séries de la catégorie {{ category.name }}</h1>
    {% for program in category.programs %}
        <li><a href="{{ path('program_show', {id: program.id}) }}">{{ program.title }}</a></li>
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}