{% extends 'base.html.twig' %}

{% block title %}Categorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>Liste des séries de la catégorie {{ category.name }}</h1>
    {% for program in category.programs %}
        <li><a href="{{ path('program_show', {slug: program.slug}) }}">{{ program.title }}</a> - <a href="{{ path('program_edit', {slug: program.slug}) }}">Edit</a> - <a
                    href="{{ path('program_delete', {slug: program.slug}) }}">Delete</a></li>
    {% endfor %}
    <a href="{{ path('program_new') }}">Create program</a>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}